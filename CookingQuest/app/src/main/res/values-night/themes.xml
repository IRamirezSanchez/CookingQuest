<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CookingQuest" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your dark theme here. -->
        <item name="android:windowBackground">@color/Primario_oscuro</item>
        <item name="toolbarStyle">@style/App.Toolbar</item>

    </style>

    <!--Estilo para el ActionBar-->
    <style name="App.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="background">@color/black</item>
        <item name="android:editTextColor">@color/white</item>

    </style>

    <!--Texto de la App, Estilo personalizado-->
    <style name="TextViewStyle" parent="Theme.AppCompat">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Botones de Juego Estilo personalizados-->
    <style name="ButtonViewStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/rounded2_oscuro</item>
    </style>


    <style name="AppTheme.Splash" parent="Theme.AppCompat.Light.NoActionBar"/>

</resources>