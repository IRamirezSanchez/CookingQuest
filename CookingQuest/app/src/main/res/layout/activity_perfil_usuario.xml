<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InicioActivity">


    <ImageView
        android:id="@+id/imagen_perfil"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/top_image"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/avatars" />

    <!-- GuÃ­a horizontal al 25% de la altura de la pantalla -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <!-- ImageView del Usuario, ajustado para superponerse en la parte inferior de la imagen de perfil -->
    <ImageView
        android:id="@+id/imagen_usuario"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-50dp"
        android:scaleType="fitXY"
        android:contentDescription="@string/center_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        tools:srcCompat="@tools:sample/avatars"
        />

    <TextView
        android:id="@+id/mostrarUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:text="NOMBRE USUARIO"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@id/mostrarTelefono"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imagen_usuario" />

    <ProgressBar
        android:id="@+id/dialogProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="76dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/mostrarUsuario"
        app:layout_constraintTop_toBottomOf="@+id/imagen_perfil" />

    <TextView
        android:id="@+id/mostrarTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:text="TELEFONO"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/mostrarCorreo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mostrarUsuario" />

    <TextView
        android:id="@+id/mostrarCorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="15dp"
        android:text="CORREO ELECTRONICO"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/infoUsuLinear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mostrarTelefono" />


    <LinearLayout
        android:id="@+id/infoUsuLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_background_claro"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toTopOf="@id/initialBottomSheet"
        app:layout_constraintTop_toBottomOf="@id/mostrarCorreo">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="@string/puntuacion"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/mostrarPuntuacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text=""
            android:textSize="30dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/initialBottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottonsheet_background_perfil"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingRight="30dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <View
            android:id="@+id/bottomSheetHandle"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@color/Tercer_color" />

        <!-- Dos botones iniciales -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/icon_recetas"
            android:drawablePadding="70dp"
            android:onClick="misRecetas"
            android:text="Mis Recetas"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="20dp" />


        <Button
            android:id="@+id/btn_puntuacionGlobal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/icon_juego_puntuacion"
            android:drawablePadding="70dp"
            android:onClick="puntuacionGlobal"
            android:text="Puntuacion Global"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="20dp" />


        <Button
            android:id="@+id/btn_EliminarCuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/icon_eliminar_usuario"
            android:drawablePadding="70dp"
            android:text="Eliminar Cuenta"
            android:onClick="eliminarCuenta"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/cerrar_sesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/icon_salir"
            android:drawablePadding="70dp"
            android:onClick="cerrarSesion"
            android:text="@string/cerrar_sesion"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/BTN_cambioFondo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="363dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/imagen_perfil"
        app:layout_constraintEnd_toEndOf="@+id/imagen_perfil"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imagen_perfil"
        app:srcCompat="@android:drawable/ic_menu_camera" />


</androidx.constraintlayout.widget.ConstraintLayout>