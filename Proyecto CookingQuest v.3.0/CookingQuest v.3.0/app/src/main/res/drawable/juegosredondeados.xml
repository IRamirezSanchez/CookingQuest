<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<!-- Estado cuando el botón está presionado -->
<item android:state_pressed="true">
    <shape>
        <solid android:color="@color/Secundario_claro" /> <!-- Cambia el color a tu preferencia -->
        <corners android:radius="10dp" /> <!-- Ajusta el radio según sea necesario -->

    </shape>
</item>
<!-- Otros estados -->
<item>
    <shape>
        <corners android:radius="10dp"/>
        <solid android:color="@color/Principal_color" />

    </shape>
</item>
</selector>