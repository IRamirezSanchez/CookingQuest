<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Base.Theme.CookingQuest" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:windowBackground">@drawable/fondo_utensilio_app</item>
        <item name="toolbarStyle">@style/App.Toolbar</item>
    </style>

    <!-- Estilo para el ActionBar -->
    <style name="App.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/Tercer_color</item>
        <item name="android:editTextColor">@color/white</item>
    </style>

    <!--Texto de la App, Estilo personalizado-->
    <style name="TextViewStyle" parent="Theme.AppCompat">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--Texto Login,Registro, Estilo personalizado-->
    <style name="TextViewStyleLogin" parent="Theme.AppCompat">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>

    </style>

    <!--Botones de Juego Estilo personalizados-->
    <style name="ButtonViewStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/rounded2</item>
    </style>

    <!--Botones de Juego Estilo personalizados-->
    <style name="ButtonViewStyleCookingFast">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/rounded_login</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="ButtonLoginUserStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20dp</item>
        <item name="android:background">@drawable/rounded_login</item>
    </style>


    <style name="Theme.CookingQuest" parent="Base.Theme.CookingQuest" />



    <!--estilo para que no aparezca el actionBar en el SplashScreen-->
    <style name="AppTheme.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/fondo_utensilio_app</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size</item>

    </style>




</resources>